{
  "extends": "next/core-web-vitals", // Extends ESLint's recommended rule set.
  
  "rules": {                         // Rules configurations:
    "eqeqeq": "error",               // Requires using strict equality (=== and !==).
    "consistent-return": "error",    // Requires a return statement in function bodies.
    "indent": [                      // Enforces consistent indentation style.
      "error",                       // Indicates that this rule should be enforced as an error.
      2                              // Specifies 2 spaces for indentation.
    ],
    "linebreak-style": [             // Enforces consistent linebreak style.
      "error",                       // Indicates that this rule should be enforced as an error.
      "unix"                         // Specifies LF line endings (Unix-style)
    ],
    "quotes": [                      // Enforces consistent use of single quotes.
      "error",                       // Indicates that this rule should be enforced as an error.
      "single"                       // Specifies single quotes.
    ],
    "semi": [                        // Requires or disallows semicolons at the end of statements.
      "error",                       // Indicates that this rule should be enforced as an error.
      "never"                        // Specifies that semicolons should never be used.
    ]
  }
}
